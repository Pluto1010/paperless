              <ul class="dropdown">
                <li><a href="#">First link in dropdown</a></li>
                <li class="active"><a href="#">Active link in dropdown</a></li>
              </ul>
            </li>
          </ul-->

          <!-- Left Nav Section -->
          <ul class="left">
            <li><%= link_to 'New Document', new_document_path %></li>
          </ul>
